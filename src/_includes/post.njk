---
layout: main
---

{% include "nav.njk" %}

<h1 class="text-5xl md:text-6xl font-black pt-10 md:pt-30 pb-4 leading-tight">
    {{ title}}
</h1>

<div>
    <em>{{ date | postDate }}</em>
</div>

<div class="mt-3 pb-10">
  {% for tag in tags %}
    {% if tag != "posts" %}
      <a href="/tags/{{ tag }}">
        <span class="post-tag">{{ tag }}</span>
      </a>
    {% endif %}
  {% endfor %}
  </div>

<div class="prose prose-xl prose-main dark:prose-invert hover:prose-a:text-pink-600 leading-loose pb-36">
  {{ content | safe }}
</div>

